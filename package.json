{
  "name": "chrome-dark-reader",
  "version": "0.0.22",
  "description": "Chrome Dark Reader. Reading comfortably with inverted brightness but preserved hue",
  "main": "index.js",
  "private": true,
  "dependencies": {
    "cssnano": "^6.0.0",
    "daisyui": "^2.51.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "dev": "react-app-rewired start",
    "test": "react-app-rewired test",
    "build": "npm-run-all build:clean build:react bump-build-version build:after",
    "build:react": "react-app-rewired build",
    "build:after": "rimraf build/static/js/*.LICENSE.txt build/index.html",
    "build:clean": "rimraf dist",
    "build:style": "npx tailwindcss -i ./src/style.css -o ./dist/style.css --minify",
    "bump-build-version": "node ./scripts/bump-build-version.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/chrome": "^0.0.231",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.23",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "install": "^0.13.0",
    "npm": "^9.6.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.2.4",
    "postcss-nesting": "^11.2.2",
    "postcss-preset-env": "^8.3.1",
    "prettier": "2.8.7",
    "react-app-rewired": "^2.2.1",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.3.1"
  }
}
